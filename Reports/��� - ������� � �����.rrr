   WIDTH = 20

   NAME = ser
   CAPTION = Серия@Серія
   WIDTH = 10

   NAME = num
   CAPTION = Номер
   WIDTH = 10

   NAME = nominal
   CAPTION = Номинал@Номінал
   WIDTH = 10

   NAME = litr
