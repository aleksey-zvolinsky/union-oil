   WIDTH = 10
   FORMAT = 0
   TOSUM = TRUE

   NAME = kol
   CAPTION = Кол-во@К-сть
   WIDTH = 10
   FORMAT = 0
   TOSUM = TRUE

   NAME = prihdate
   CAPTION = Приход в кассу@Прихід в касу
   FORMAT = dd.mm.yyyy
