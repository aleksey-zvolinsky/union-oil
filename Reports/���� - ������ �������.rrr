[GLOBAL]
  TITLE = Реестр бланков@Реєстр бланків
  MENU = Отчеты\Отчеты по эл. карточкам\Бланки\Реестр бланков@Реєстр бланків
  VERSION = 1.5
  RAZM_SYMBOLS = NO
  PAGES_WIDTH = 1

[PANELS]

  DATEPANEL
  END

  ORGPANEL
    NUM = 2
    CAPTION1=От кого@Від кого
    CAPTION2=Кому
    OPTIONS1=yyyyynnn
    STARTCONDITION1=0
  END

  PANEL
    ELEMENT OperList:List
      CAPTION = Операции:@Операцiї
      TABLENAME = oil_oper_type
      CONDITION = grp in (17,18)
    END
  END

[DESCRIPTION]
  От :BeginDate по :EndDate@Від :BeginDate по :EndDate
  Филиал:: :org1.Name@Філія:: :org1.Name
  Операции:: :OperList.NameList@Операції:: :OperList.NameList

[SQL]

select date_,
       numb,
       card_number,
       from_name,
       to_name,
       1 as cnt,
       oper_name,
       dog,
       dog_date,
       nvl(b.rn_var_text,rn.var_text) as rn_var_text,
       nvl(b.rn_var_date,rn.var_date) as rn_var_date,
       price as price,
       price as summ
  from v_card_blank_full_base b, oil_rash_nak rn
 where b.dog_id = rn.source_id(+) and b.dog_inst = rn.source_inst(+) and rn.rash_nak_type(+) = 1 and rn.state(+) = 'Y'
   and from_id=nvl(:org1.id,from_id)
   and from_inst=nvl(:org1.inst,from_inst)
   and to_id=nvl(:org2.id,to_id)
   and to_inst=nvl(:org2.inst,to_inst)
   and date_ between :BeginDate and :EndDate
   and :OperList.IsInList{oper_id}

[FIELDS]

  NAME = FROM_NAME
  CAPTION = От кого@Від кого
  WIDTH = 50

  NAME = TO_NAME
  CAPTION = Кому@Кому
  WIDTH = 50

  NAME = DATE_
